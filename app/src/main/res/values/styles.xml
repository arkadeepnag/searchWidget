<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Primary App Colors -->
        <item name="colorPrimary">#6200EE</item>
        <item name="colorPrimaryDark">#3700B3</item>
        <item name="colorAccent">#03DAC5</item>

        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>

        <!-- Background -->
        <item name="android:windowBackground">?android:colorBackground</item>

        <!-- Text Appearance -->
        <item name="android:textColorPrimary">#212121</item>
        <item name="android:textColorSecondary">#757575</item>

        <!-- Button Styles -->
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button</item>

        <!-- Widget Styling (for Dialogs, etc.) -->
        <item name="android:dialogTheme">@style/ThemeOverlay.AppCompat.Dialog</item>
        <item name="android:alertDialogTheme">@style/ThemeOverlay.AppCompat.Dialog.Alert</item>
    </style>

</resources>
